<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkgrey"
    tools:context=".HomeActivity">


        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/ic_pp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello,Indra "
            android:layout_marginLeft="92dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CEO NEWS"
            android:layout_marginLeft="92dp"
            android:layout_marginTop="45dp"
            android:textColor="@color/white"
            android:textSize="24px"/>

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="340dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="25dp">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/notifications"
            app:tint="#fff"
            android:backgroundTint="@color/darkgrey1"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/kategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KATEGORI"
            android:textColor="@color/yellow"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="100dp"
            android:textSize="18dp" />
        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/pink"
            android:textColor="@color/darkgrey"
            android:text="animals"
            android:textAlignment="viewStart"
            android:layout_below="@+id/kategori"
            android:textSize="8pt"/>
        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:backgroundTint="@color/pink"
            android:textColor="@color/darkgrey"
            android:text="cosmetics"
            android:layout_below="@+id/button1"
            android:layout_marginTop="5dp"
            android:textSize="8pt"
            android:textAlignment="viewStart"/>
        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/pink"
            android:textColor="@color/darkgrey"
            android:text="sport"
            android:layout_below="@+id/button2"
            android:textSize="8pt"
            android:textAlignment="viewStart"/>
        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/pink"
            android:textColor="@color/darkgrey"
            android:text="animals"
            android:layout_below="@+id/button3"
            android:textSize="8pt"
            android:textAlignment="viewStart"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REVIEW"
            android:textColor="@color/yellow"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="25dp"
            android:textSize="18dp"
            android:id="@+id/review"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/review">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_recommended"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recommended"
            android:layout_marginTop="10dp"
            android:clipToPadding="false"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />
        </LinearLayout>
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:background="@color/darkgrey1"
            app:elevation="50dp"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"
            app:labelVisibilityMode="labeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/menu" />

</RelativeLayout>
